<%- include("../partials/header.ejs") %>
<div class="container-login100">
    <div class="wrap-login60">
        <div class="container">
            <h2 class="showlogin">Edit song</h2>
            <form action="/prints/<%= print._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Title</label>
                <input type="text" class="form-control" name="print[name]" placeholder="<%= print.name %>", value = "<%= print.name %>">
            </div>
            <div class="mb-3">
                <label class="form-label">Artist</label>
                <input type="text" class="form-control" name="print[Artist]" placeholder="<%= print.Artist %>", value = "<%= print.Artist %>">
            </div>
            <div class="mb-3">
                <label class="form-label">Lyrice</label>
                <input type="text" class="form-control" name="print[Lyrice]" placeholder="<%= print.Lyrice %>", value = "<%= print.Lyrice %>">
            </div>
            <div class="mb-3">
                <label class="form-label">Image</label>
                <img src="<%= print.image %>" height = '300px'>
                <input type="file" class="form-control" name="image" accept='image/*'>
            </div>
            <div class="mb-3">
                <label class="form-label">MP3</label>
                <input type="file" class="form-control" name="musicaudio" accept='audio/*'>
            </div>
            <div class="flex-parent jc-center">
                <a class="cancel" href="/prints">Go back</a>
                <button class="buttonlogin" type="submit" class="btn btn-primary">Submit</button>
            </div>
            </form>
        </div>
    </div>
</div>

<%- include("../partials/footer.ejs") %>