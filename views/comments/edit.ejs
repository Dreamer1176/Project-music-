<%- include("../partials/header.ejs") %>
<div class="container-login100">
    <div class="wrap-login50">
        <div class="container">
            <h2 class="showlogin">Edit your comment</h2>
            <form action="/prints/<%= print_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label">Comment</label>
                <input type="text" class="form-control" name="comment[text]" placeholder="<%= comment.text %>" value = "<%= comment.text %>">
            </div>
            <a class="cancel" href="/prints/<%= print._id %>">Go back</a>
            <button class="buttonlogin" type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
